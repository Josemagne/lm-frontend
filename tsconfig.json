{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["./src/types/**/*", "node_modules/@types"],
    "types": ["cypress", "node", "jest", "@testing-library/jest-dom", "mocha"],
    "resolveJsonModule": true,

    "allowJs": true,
    "declaration": true,
    "outDir": "./build",
    "noEmit": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "build/**/*",
    "lm-components"
  ]
}
